@model ShoppingCart

<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="card shadow border-15 border-secondary  mt-6">
        <div class="card-header bg-dark bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Product.Title</h3>
                    <p class="text-white-50 fw-semibold mb-0">by @Model.Product.Author</p>
                </div>
            </div>
        </div>
        <div class="card-body bg-secondary " >
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-3">
                        <a asp-action="index" class="btn btn-outline-dark bg-gradient mg-5 px-3 py-3 fw-semibold btn-sm text-uppercase">
                            <small>Back to Home</small>
                        </a>

                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.Product.ImageURL" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-2">
                            <span> 
                                The Type of Book:@Model.Product.Category.Name
                            </span>
                                                       
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark ">ISBN:@Model.Product.ISBN</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark  pb-2">
                                List Price:
                                <span class="text-decoration-line-through">
                                    @Model.Product.LastPrice$
                                </span>
                            </h6>
                        </div>
                        <div class=" row text-center ps-2 ">
                            <div class="p-1 col-3 col-lg-2 bg-dark border-bottom">
                                <div class="text-light text-opacity-80 fw-semibold">Quantity</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-dark border-bottom">
                                <div class="text-light text-opacity-80 fw-semibold">1-50</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-dark border-bottom">
                                <div class="text-light text-opacity-80fw-semibold">51-100</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-dark border-bottom">
                                <div class="text-light text-opacity-80 fw-semibold">100+</div>
                            </div>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>Price</div>
                            </div>
                             <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.Product.Price$</div>
                            </div> <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.Product.Price50$</div>
                            </div> <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.Product.Price100$</div>
                            </div>
                        </div>
                        <div class="row p-lg-2 mb-3  mt-3">
                            <p class="text-dark lh-sm">Description:</p>
                            <p class="ps-4"> @Model.Product.Description</p>
                        </div>
                        <div class="row p-lg-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-dark text-white border-3 border-warning fw-semibold ">
                                        Count
                                    </span>
                                    <input asp-for="Count"  type="number" value="1" class="form-control text-end" aria-label="Sizing example input" aria-describedby="inputGroup"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" asp-controller="Home" asp-action="Details"  class="btn btn-outline-dark   w-100 py-3 text-uppercase fw-semibold">
                                    Add to Card 
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>